{
  "name": "Hypertext Editor",
  "short_name": "Hypertext",
  "description": "HTML Document Editor",
  "id": "/index.html",
  "scope": "/editor/",
  "start_url": "./",
  "display": "fullscreen",
  "theme_color": "#020887",
  "background_color": "#FDFDFD",
  "icons": [
    {
      "src": "./assets/hypertext-app-icon192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./assets/hypertext-app-icon512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "./assets/hypertext-app-icon.svg",
      "type": "image/svg",
      "purpose": "any"
    }
  ],
  "screenshots" : [
  {
    "src": "./assets/hypertext-screenshot.png",
    "sizes": "800x629",
    "type": "image/png",
    "platform": "wide",
    "label": "Hypertext HTML Document Editor"
  }],
  "shortcuts" : [
  {
    "name": "Edit",
    "url": ".",
    "description": "Edit HTML Document"
  }]
  ,
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "text/html": [".html",".htmd"]
      },
      "launch_type": "single-client"
    }
  ],
   "protocol_handlers": [
    {
      "protocol": "web+htmld",
      "url": "./index.html?file=%s"
    }
  ],
  "url_handlers": [
      {"origin": "https://www.hypertext.plus"}
  ],
   "display_override": ["window-controls-overlay", "fullscreen", "standalone", "minimal-ui"],
   "dir": "auto",
  "lang": "en",
  "orientation": "any",
  "categories": ["productivity"]
}
